{
    "$id": "https://example.com/person.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
      "givenNameHangul",
      "givenNameRoman",
      "familyNameHangul",
      "familyNameRoman",
      "stageNameHangul",
      "stageNameRoman",
      "birthday",
      "status"
    ],
    "title": "Idol",
    "type": "object",
    "properties": {
        "givenNameHangul": {
            "description": "Given (first) name in Hangul",
            "type": "string"
        },
        "givenNameRoman": {
            "description": "Given (first) name Romanized",
            "type": "string"
        },
        "familyNameHangul": {
            "description": "Family (last) name in Hangul",
            "type": "string"
        },
        "familyNameRoman": {
            "description": "Family (last) name Romanzied",
            "type": "string"
        },
        "stageNameHangul": {
            "description": "Stage (last) name in Hangul",
            "type": "string"
        },
        "stageNameRoman": {
            "description": "Stage (last) name Romanzied",
            "type": "string"
        },
        "birthday": {
            "description": "Birthday",
            "type": "string",
            "pattern": "^([0-9]{4})-(1[0-2]|0[1-9])-(3[01]|0[1-9]|[12][0-9])$"
        },
        "groupHangul": {
            "description": "Group name in Hangul",
            "type": "string"
        },
        "groupRoman": {
            "description": "Group name Romanized",
          "type": "string"
        },
        "formerGroups": {
            "description": "An Idol's former groups",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
        },
        "status": {
            "description": "Idol's activity status",
            "enum": ["active", "former", "solo"]
        }
    }
}
