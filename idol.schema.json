{
    "$id": "https://github.com/kpopdb/kpopdb/blob/master/idol.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
      "givenName",
      "givenNameHangul",
      "givenNameRoman",
      "familyName",
      "familyNameHangul",
      "familyNameRoman",
      "stageNameHangul",
      "stageNameRoman",
      "birthday",
      "nationality",
      "status",
      "sex"
    ],
    "title": "Idol",
    "type": "object",
    "properties": {
        "givenName": {
            "description": "Given (first) name",
            "type": "string"
        },
        "givenNameHangul": {
            "description": "Given (first) name in Hangul",
            "type": "string"
        },
        "givenNameRoman": {
            "description": "Given (first) name Romanized",
            "type": "string"
        },
        "familyName": {
            "description": "Family (last) name",
            "type": "string"
        },
        "familyNameHangul": {
            "description": "Family (last) name in Hangul",
            "type": "string"
        },
        "familyNameRoman": {
            "description": "Family (last) name Romanzied",
            "type": "string"
        },
        "stageNameHangul": {
            "description": "Stage (last) name in Hangul",
            "type": "string"
        },
        "stageNameRoman": {
            "description": "Stage (last) name Romanzied",
            "type": "string"
        },
        "birthday": {
            "description": "Birthday",
            "type": "string",
            "pattern": "^([0-9]{4})-(1[0-2]|0[1-9])-(3[01]|0[1-9]|[12][0-9])$"
        },
        "sex": {
            "description": "Idol's sex",
            "enum": ["male", "female"]
        },
        "nationality": {
            "description": "Nationality",
            "enum": ["korean", "chinese", "thai", "korean-american"]
        },
        "groupHangul": {
            "description": "Group name in Hangul",
            "type": "string"
        },
        "groupRoman": {
            "description": "Group name Romanized",
          "type": "string"
        },
        "formerGroups": {
            "description": "An Idol's former groups",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
        },
        "status": {
            "description": "Idol's activity status",
            "enum": ["active", "former", "solo", "hiatus"]
        }
    }
}
