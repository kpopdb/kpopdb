{
    "$id": "https://example.com/person.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
      "nameHangul",
      "nameRoman",
      "debutDate",
      "status"
    ],
    "title": "Group",
    "type": "object",
    "properties": {
        "nameHangul": {
            "description": "Hangul KPOP group name.",
            "type": "string"
        },
        "nameRoman": {
            "description": "Romanized KPOP group name",
            "type": "string"
        },
        "debutDate": {
            "description": "Debut Date",
            "type": "string",
            "pattern": "^([0-9]{4})-(1[0-2]|0[1-9])-(3[01]|0[1-9]|[12][0-9])$"
        },
        "fandomRoman": {
            "description": "Fandom Name Romanized",
            "type": "string"
        },
        "fandomHangul": {
            "description": "Fandom Name in Hangul",
            "type": "string"
        },
        "status": {
            "description": "Group's activity status",
            "enum": ["active", "disbanded", "hiatus"]
        }
    }
}
